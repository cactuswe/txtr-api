# Application settings
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# HTTP settings
HTTP_TIMEOUT_SECS=12
USER_AGENT=url-insights-mini/1.0

# Rate limiting
RATE_LIMIT_PER_MIN=10

# Cache settings
CACHE_TTL_S=600
CACHE_DIR=./data/cache
CACHE_TTL_SECONDS=3600
CACHE_MAX_BYTES=104857600   # 100MB soft cap
DEFAULT_CACHE_TTL_SECONDS=600

# Security
ENABLE_ROBOTS_CHECK=false

# Text processing limits
MAX_ENRICH_CHARS=6000
MAX_RESPONSE_TEXT_CHARS=8000

# Performance tuning
POOL_CONNECTIONS=100
POOL_MAXSIZE=20
KEEP_ALIVE_EXPIRY=5
